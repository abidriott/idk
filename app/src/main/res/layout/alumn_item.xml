<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cv"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="6dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/foto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/angrycat"
                android:layout_margin="6dp"
                app:shapeAppearanceOverlay="@style/circle" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linelay"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/foto"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/txtAlumnoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="@string/alumno"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAlumnoCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Ing. Tec. InformaciÃ³n"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:text="2021030119"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
